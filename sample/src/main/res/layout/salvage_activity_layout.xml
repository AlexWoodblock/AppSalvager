<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="32dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginBottom="16dp"
            android:text="Your process is now in salvage mode. Please apply the required fix, and restart the app"/>

        <TextView
            android:id="@+id/cause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/fixContentProvider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fix ContentProvider"/>

        <Button
            android:id="@+id/fixApplication"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fix Application"/>

        <Button
            android:id="@+id/throwAnotherCrash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crash salvage mode"/>

    </LinearLayout>


</FrameLayout>